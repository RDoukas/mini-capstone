<h1>All products</h1>
<% @products.each do |product| %>
  <h2><%= product.name %></h2>
  <% if product.images.any? %>
    <img src="<%= product.images[0].url%>" alt="" width=100 length=100 >
  <%end%>
  <h4>Price: <%= product.price%></h2>
  <h4>Description: <%= product.description %></h2>
  <h4>Total: <%= product.total %></h2>
  <h4>Supplier: <%= product.supplier.id %></h2>
  <a href="/products/<%= product.id%>">More Info</a>

<% end %>
 