<h2>Edit Product</h2>

<form action="/products/<%= @product.id%>" method="post">
  <input type="hidden" name="_method" value="patch" />
  <div>
    Name: <input type="text" name="name" value="<%= @product.name%>">
  </div>
  <div>
    Price: <input type="text" name="price" value="<%=
      @product.price%>">
  </div>
  <div>
    Description: <input type="text" name="description" value="<%= @product.description%>">
  </div>
  <div>
    Image Url: <input type="text" name="images" value="<%= @product.images%>">
  </div>
  <div>
    Supplier: <input type="text" name="supplier_id" value="<%= @product.supplier_id%>">
  </div>
  <div>
    <button type="submit">Update Product</button>
  </div>
</form>
